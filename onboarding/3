(function(){
  const steps = [
    {
      html:`<h2>Votre espace personnel</h2>
            <p>Tout est d√©j√† organis√© pour vous guider, sans surcharge.</p>`
    },
    {
      html:`<h2>Le budget</h2>
            <p>Vous voyez ce qui est pr√©vu, pay√© et restant.</p>`
    },
    {
      html:`<h2>La timeline</h2>
            <p>Chaque mois, vous savez exactement quoi faire.</p>`
    },
    {
      html:`<h2>C‚Äôest pr√™t ‚ú®</h2>
            <p>Il suffit maintenant de d√©bloquer votre carnet.</p>`
    }
  ];

  let i = 0;
  const modal = document.getElementById("cmDemo");
  const stepBox = document.getElementById("cmDemoStep");

  document.getElementById("openDemo").onclick = ()=>{
    modal.classList.remove("hidden");
    stepBox.innerHTML = steps[0].html;
  };

  document.getElementById("cmDemoNext").onclick = ()=>{
    i++;
    if(i >= steps.length){
      modal.classList.add("hidden");
      i = 0;
      return;
    }
    stepBox.innerHTML = steps[i].html;
  };
})();

</script>
